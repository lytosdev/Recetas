<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controlador.VerRecetaController">
   <children>
      <HBox spacing="30.0" styleClass="sr-panel-top">
         <children>
            <VBox>
               <children>
                  <Pane styleClass="sr-imagen" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Título">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></Text>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text">
                     <VBox.margin>
                        <Insets bottom="15.0" top="5.0" />
                     </VBox.margin>
                  </Text>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Descripción" />
                  <TextFlow VBox.vgrow="ALWAYS">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                     </children>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </TextFlow>
               </children>
            </VBox>
            <VBox>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Dificultad" />
                  <HBox spacing="8.0">
                     <children>
                        <TextFlow>
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                           </children>
                        </TextFlow>
                        <TextFlow>
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                           </children>
                        </TextFlow>
                        <TextFlow>
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
                           </children>
                        </TextFlow>
                     </children>
                     <VBox.margin>
                        <Insets bottom="15.0" top="5.0" />
                     </VBox.margin>
                  </HBox>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Duración" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Personas">
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Text>
               </children>
            </VBox>
         </children>
      </HBox>
      <ScrollPane fitToHeight="true" fitToWidth="true">
         <content>
            <StackPane alignment="TOP_CENTER">
               <children>
                  <VBox styleClass="sr-panel-creciente">
                     <children>
                        <GridPane hgap="30.0">
                           <columnConstraints>
                              <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="385.0" />
                              <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="385.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints vgrow="ALWAYS" />
                           </rowConstraints>
                           <children>
                              <VBox spacing="10.0">
                                 <children>
                                    <StackPane alignment="CENTER_LEFT" styleClass="sr-panel-titulo">
                                       <children>
                                          <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ingredientes">
                                             <styleClass>
                                                <String fx:value="titulo-1" />
                                                <String fx:value="sr-titulo" />
                                             </styleClass>
                                             <StackPane.margin>
                                                <Insets left="10.0" />
                                             </StackPane.margin>
                                          </Text>
                                       </children>
                                    </StackPane>
                                    <VBox fx:id="pnlIngredientes" spacing="10.0" />
                                 </children>
                              </VBox>
                              <VBox spacing="10.0" GridPane.columnIndex="1">
                                 <children>
                                    <StackPane alignment="CENTER_LEFT" styleClass="sr-panel-titulo">
                                       <children>
                                          <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Utensilios">
                                             <styleClass>
                                                <String fx:value="titulo-1" />
                                                <String fx:value="sr-titulo" />
                                             </styleClass>
                                             <StackPane.margin>
                                                <Insets left="10.0" />
                                             </StackPane.margin>
                                          </Text>
                                       </children>
                                    </StackPane>
                                    <VBox fx:id="pnlUtensilios" spacing="10.0" />
                                 </children>
                              </VBox>
                           </children>
                        </GridPane>
                        <VBox spacing="10.0">
                           <children>
                              <StackPane alignment="CENTER_LEFT" styleClass="sr-panel-titulo">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Pasos">
                                       <styleClass>
                                          <String fx:value="titulo-1" />
                                          <String fx:value="sr-titulo" />
                                       </styleClass>
                                       <StackPane.margin>
                                          <Insets left="10.0" />
                                       </StackPane.margin>
                                    </Text>
                                 </children>
                              </StackPane>
                              <VBox fx:id="pnlPasos" spacing="10.0" />
                           </children>
                           <VBox.margin>
                              <Insets top="30.0" />
                           </VBox.margin>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </content>
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin>
      </ScrollPane>
      <TextFlow styleClass="sr-panelflow-email">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Debe introducir su correo electrónico porque es en donde le notificaremos si su receta ha sido aceptada, en caso contrario le daremos las posibles correcciones para que pueda volverla a subir si procede." />
         </children>
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin>
      </TextFlow>
      <AnchorPane styleClass="sr-panel-email">
         <children>
            <TextField prefHeight="31.0" prefWidth="731.0" promptText="Dirección de correo electrónico" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="70.0" />
            <Button mnemonicParsing="false" styleClass="sr-boton-aceptar" text="Enviar" AnchorPane.rightAnchor="0.0" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </AnchorPane>
      <StackPane />
   </children>
   <stylesheets>
      <URL value="@css/general.css" />
      <URL value="@css/verReceta.css" />
   </stylesheets>
</VBox>
